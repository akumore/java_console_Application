- unless @to_be_reviewed_real_estates.blank?
  %h2= t('.in_review')
  %table.in_review_state.table.table-bordered.table-striped
    %tr
      %th{ :width => '15%' }= Address.human_attribute_name :city
      %th{ :width => '55%' }= Address.model_name.human
      %th= t('.last_edited')
      %th
    = render :partial => 'real_estate', :collection => @to_be_reviewed_real_estates

