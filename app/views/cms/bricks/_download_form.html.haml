= form_for @brick, url: url do |f|
  = render 'cms/shared/errors', model: @brick

  %fieldset
    .control-group.mandatory
      = f.label :title
      .controls
        = f.text_field :title, class: 'span8'

    .control-group.mandatory
      = f.label :file
      .controls
        = f.file_field :file

        - if @brick.file.present?
          .well
            = link_to "\"#{@brick.title}\" in neuem Fenster Ã¶ffnen", @brick.file.url, target: '_new'

    .control-group.mandatory
      = f.label :image
      .controls
        = f.file_field :image

        - if @brick.image.present?
          .well
            = image_tag(@brick.image)

  .form-actions
    = f.submit nil, class: 'btn btn-primary'
