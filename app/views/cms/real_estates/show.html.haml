= render 'wizard_header'

= render_navigation :context => :real_estate

%dl
  %dt.span3= t "mongoid.attributes.real_estate.category_id"
  %dd= @real_estate.category.label

  - if @real_estate.row_house?
    %dt.span3= t "mongoid.attributes.real_estate.building_type"
    %dd= t ".#{@real_estate.building_type}"

  %dt.span3= t "mongoid.attributes.real_estate.utilization"
  %dd= t "cms.real_estates.form.#{@real_estate.utilization}"

  %dt.span3= t "mongoid.attributes.real_estate.offer"
  %dd= t("cms.real_estates.form.#{@real_estate.offer}")

  %dt.span3= t "mongoid.attributes.real_estate.is_first_marketing"
  %dd= @real_estate.is_first_marketing?

  %dt.span3= t "mongoid.attributes.real_estate.channels"
  %dd
    = @real_estate.channels.map {|channel| t "cms.real_estates.form.channels.#{channel}"}.join(", ")
    &nbsp;

  %dt.span3= t "mongoid.attributes.real_estate.contact"
  %dd
    = [ [:firstname, :lastname].map {|attr| @real_estate.contact.try(attr)}.compact.join(" "), [:phone, :email].map {|attr| @real_estate.contact.try(attr)}.compact.join(", ")].join(", ")
    &nbsp;

%legend Titel und Beschreibungen

%dl
  %dt.span3= t "mongoid.attributes.real_estate.title"
  %dd= @real_estate.title

  %dt.span3= t "mongoid.attributes.real_estate.description"
  %dd= @real_estate.description

  %dt.span3= t "mongoid.attributes.real_estate.property_name"
  %dd
    = @real_estate.property_name
    &nbsp;

  %dt.span3= t "mongoid.attributes.real_estate.short_description"
  %dd
    = @real_estate.short_description
    &nbsp;

  %dt.span3= t "mongoid.attributes.real_estate.keywords"
  %dd
    = @real_estate.keywords
    &nbsp;

  %dt.span3= t "mongoid.attributes.real_estate.utilization_description"
  %dd
    = @real_estate.utilization_description.presence
    &nbsp;

%legend= Reference.model_name.human

%dl
  %dt.span3= t "mongoid.attributes.reference.property_key"
  %dd
    = @real_estate.reference.try(:property_key)
    &nbsp;

  %dt.span3= t "mongoid.attributes.reference.building_key"
  %dd
    = @real_estate.reference.try(:building_key)
    &nbsp;

  %dt.span3= t "mongoid.attributes.reference.unit_key"
  %dd
    = @real_estate.reference.try(:unit_key)
    &nbsp;
