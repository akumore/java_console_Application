= render_navigation :context => :real_estate

= form_for @address, :url => cms_real_estate_address_path(@real_estate) do |f|
  -if @address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address.errors.count, "error")} prohibited this cms_real_estate from being saved:"
      %ul
        - @address.errors.full_messages.each do |msg|
          %li= msg
    
  %fieldset
    .clearfix
      = f.label :street
      .input
        = f.text_field :street, :class => 'span8'
    .clearfix
      = f.label :street_number
      .input
        = f.text_field :street_number, :class => 'span3'
    .clearfix
      = f.label :zip
      .input
        = f.text_field :zip, :class => 'span3'
    .clearfix
      = f.label :canton
      .input
        = f.select :canton, Address::CANTONS.map { |c| [t("cantons.#{c}"), c] }, :prompt => 'Kanton auswÃ¤hlen', :class => 'span8'
    .clearfix
      = f.label :link_url
      .input
        = f.text_field :link_url, :class => 'span8'
  %fieldset
    %legend= GeoLocation.model_name.human
    = f.fields_for @address.geo_location do |rf|
      .clearfix
        = rf.label :lat
        .input
          = rf.text_field :lat, :class => 'span8'
      .clearfix
        = rf.label :lng
        .input
          = rf.text_field :lng, :class => 'span8'
  .actions
    = f.submit nil, :class => 'btn primary'
