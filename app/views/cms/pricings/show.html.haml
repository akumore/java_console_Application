= render 'wizard_header'

= render_navigation :context => :real_estate


%dl.dl-horizontal
  - if @real_estate.for_rent?
    %dt= t "mongoid.attributes.pricing.price_unit"
    %dd
      = t("cms.pricings.form.#{@pricing.price_unit}")
      &nbsp;

  - if @real_estate.for_rent?
    %dt= t "mongoid.attributes.pricing.for_rent_netto"
    %dd
      = number_to_currency @pricing.for_rent_netto, :locale => 'de-CH'
      &nbsp;

    %dt= t "mongoid.attributes.pricing.for_rent_extra"
    %dd
      = number_to_currency @pricing.for_rent_extra, :locale => 'de-CH'
      &nbsp;

  - if @real_estate.for_sale?
    %dt= t "mongoid.attributes.pricing.for_sale"
    %dd
      = number_to_currency @pricing.for_sale, :locale => 'de-CH'
      &nbsp;

    %dt= t "mongoid.attributes.pricing.estimate"
    %dd
      = @pricing.estimate
      &nbsp;

    %dt= t "mongoid.attributes.pricing.opted"
    %dd= @pricing.opted

  - if @real_estate.commercial_utilization?
    %dt= t "mongoid.attributes.pricing.storage"
    %dd
      = number_to_currency @pricing.storage, :locale => 'de-CH'
      &nbsp;

    %dt= t "mongoid.attributes.pricing.extra_storage"
    %dd
      = number_to_currency @pricing.extra_storage, :locale => 'de-CH'
      &nbsp;


%legend Parkplatzpreise in Auto-Einstellhalle

%dl.dl-horizontal
  %dt= t "mongoid.attributes.pricing.inside_parking"
  %dd
    = number_to_currency @pricing.inside_parking, :locale => 'de-CH'
    &nbsp;

  %dt= t "mongoid.attributes.pricing.inside_parking_temporary"
  %dd
    = number_to_currency @pricing.inside_parking_temporary, :locale => 'de-CH'
    &nbsp;


%legend Parkplatzpreise draussen

%dl.dl-horizontal
  %dt= t "mongoid.attributes.pricing.outside_parking"
  %dd
    = number_to_currency @pricing.outside_parking, :locale => 'de-CH'
    &nbsp;

  %dt= t "mongoid.attributes.pricing.outside_parking_temporary"
  %dd= number_to_currency @pricing.outside_parking_temporary, :locale => 'de-CH'
