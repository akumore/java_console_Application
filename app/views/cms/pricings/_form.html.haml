= render_navigation :context => :real_estate

= form_for @pricing, :url => cms_real_estate_pricing_path(@real_estate) do |f|
  -if @pricing.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pricing.errors.count, "error")} prohibited this cms_real_estate from being saved:"
      %ul
        - @pricing.errors.full_messages.each do |msg|
          %li= msg
    
  %fieldset
    .clearfix
      = f.label :price_unit
      .input
        = f.select :price_unit, Pricing::PRICE_UNITS.map { |c| [t(".#{c}"), c] }, :prompt => 'Preiseinheit auswÃ¤hlen', :class => 'span8'
    - if @real_estate.for_rent?
      .clearfix
        = f.label :for_rent_netto
        .input
          = f.text_field :for_rent_netto, :class => 'span8'
      .clearfix
        = f.label :for_rent_extra
        .input
          = f.text_field :for_rent_extra, :class => 'span8'
    - if @real_estate.for_sale?
      .clearfix
        = f.label :for_sale
        .input
          = f.text_field :for_sale, :class => 'span8'
    .clearfix
      = f.label :estimate
      .input
        = f.text_field :estimate, :class => 'span8'
    .clearfix
      = f.label :opted
      .input
        %ul.inputs-list
          %li
            %label
              = f.check_box :opted, :class => 'span8'
    - if @real_estate.commercial_utilization?
      .clearfix
        = f.label :storage
        .input
          = f.text_field :storage, :class => 'span8'
      .clearfix
        = f.label :extra_storage
        .input
          = f.text_field :extra_storage, :class => 'span8'
    %fieldset.inside-parking
      %legend Parkplatzpreise in Auto-Einstellhalle
      .clearfix
        = f.label :inside_parking
        .input
          = f.text_field :inside_parking, :class => 'span8'
      .clearfix
        = f.label :inside_parking_temporary
        .input
          = f.text_field :inside_parking_temporary, :class => 'span8'
    %fieldset.outside-parking
      %legend Parkplatzpreise draussen
      .clearfix
        = f.label :outside_parking
        .input
          = f.text_field :outside_parking, :class => 'span8'
      .clearfix
        = f.label :outside_parking_temporary
        .input
          = f.text_field :outside_parking_temporary, :class => 'span8'
  .actions
    = f.submit nil, :class => 'btn primary'
