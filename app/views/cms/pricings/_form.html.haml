= render 'wizard_header'

= render_navigation :context => :real_estate

= form_for @pricing, :url => cms_real_estate_pricing_path(@real_estate) do |f|
  = render 'cms/shared/errors', :model => @pricing

  %fieldset.push-checkboxes-down
    .control-group.mandatory
      = f.label :price_unit
      .controls
        - if PriceUnit.all_by_offer_and_utilization(@real_estate.offer, @real_estate.utilization).count > 1
          = f.select :price_unit, (PriceUnit.all_by_offer_and_utilization(@real_estate.offer, @real_estate.utilization)).map { |c| [t(".#{c}"), c] }, :include_blank => 'Preiseinheit auswÃ¤hlen'
        - else
          = f.hidden_field :price_unit, :value => PriceUnit.all_by_offer_and_utilization(@real_estate.offer, @real_estate.utilization).first
          %span.input-to-text= t(".#{PriceUnit.all_by_offer_and_utilization(@real_estate.offer, @real_estate.utilization).first}")
    - if @real_estate.for_rent?
      .control-group.mandatory
        = f.label :for_rent_netto
        .controls
          = f.text_field :for_rent_netto, :class => 'span8'
      .control-group.mandatory
        = f.label :for_rent_extra
        .controls
          = f.text_field :for_rent_extra, :class => 'span8'

    - if accessible?(:for_rent_depot)
      .control-group
        = f.label :for_rent_depot
        .controls
          = f.text_field :for_rent_depot, :class => 'span8'

    - if @real_estate.for_sale?
      .control-group.mandatory
        = f.label :for_sale
        .controls
          = f.text_field :for_sale, :class => 'span8'
    .control-group
      = f.label :estimate
      .controls
        = f.text_field :estimate, :class => 'span8'
        %i.icon-question-sign.help-popover{ :rel => 'popover', 'data-original-title' => Pricing.human_attribute_name(:estimate), 'data-content' => t('.help_popover.estimate') }
    .control-group
      = f.label :opted
      .controls
        = f.check_box :opted
    - if @real_estate.commercial_utilization?
      .control-group
        = f.label :storage
        .controls
          = f.text_field :storage, :class => 'span8'
      .control-group
        = f.label :extra_storage
        .controls
          = f.text_field :extra_storage, :class => 'span8'

    - if accessible?(:parking_spots_prices_group)
      %fieldset.inside-parking
        %legend Parkplatzpreise in Auto-Einstellhalle
        .control-group
          = f.label :inside_parking
          .controls
            = f.text_field :inside_parking, :class => 'span8'
        .control-group
          = f.label :inside_parking_temporary
          .controls
            = f.text_field :inside_parking_temporary, :class => 'span8'
      %fieldset.outside-parking
        %legend Parkplatzpreise draussen
        .control-group
          = f.label :outside_parking
          .controls
            = f.text_field :outside_parking, :class => 'span8'
        .control-group
          = f.label :outside_parking_temporary
          .controls
            = f.text_field :outside_parking_temporary, :class => 'span8'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = render 'cms/real_estates/actions'
