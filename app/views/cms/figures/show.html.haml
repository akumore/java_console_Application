- else
  %dl.dl-horizontal
    %dt= t "mongoid.attributes.figure.floor"
    %dd
      = @figure.floor
      &nbsp;

    %dt= t "mongoid.attributes.figure.floor_estimate"
    %dd
      = @figure.floor_estimate
      &nbsp;


    - if @real_estate.living?
      %dt= t "mongoid.attributes.figure.rooms"
      %dd
        = @figure.rooms
        &nbsp;

      %dt= t "mongoid.attributes.figure.rooms_estimate"
      %dd
        = @figure.rooms_estimate
        &nbsp;

      %dt= t "mongoid.attributes.figure.living_surface"
      %dd
        = @figure.living_surface
        &nbsp;

      %dt= t "mongoid.attributes.figure.living_surface_estimate"
      %dd
        = @figure.living_surface_estimate
        &nbsp;

      %dt= t "mongoid.attributes.figure.specification_living_surface"
      %dd
        = @figure.specification_living_surface
        &nbsp;


    - if @real_estate.living? || @real_estate.working?
      %dt= t "mongoid.attributes.figure.property_surface"
      %dd
        = @figure.property_surface
        &nbsp;

      %dt= t "mongoid.attributes.figure.property_surface_estimate"
      %dd
        = @figure.property_surface_estimate
        &nbsp;

      %dt= t "mongoid.attributes.figure.storage_surface"
      %dd
        = @figure.storage_surface
        &nbsp;

      %dt= t "mongoid.attributes.figure.storage_surface_estimate"
      %dd
        = @figure.storage_surface_estimate
        &nbsp;


    - if @real_estate.working? || @real_estate.storing?
      %dt= t "mongoid.attributes.figure.usable_surface"
      %dd
        = @figure.usable_surface
        &nbsp;

      %dt= t "mongoid.attributes.figure.usable_surface_estimate"
      %dd
        = @figure.usable_surface_estimate
        &nbsp;

      %dt= t "mongoid.attributes.figure.specification_usable_surface"
      %dd
        = @figure.specification_usable_surface
        &nbsp;
