= render 'wizard_header'

= render_navigation :context => :real_estate

- if @figure.nil?
  FÃ¼r diese Immobilie wurden keine #{t "navigation.cms.real_estates_navigation.figure"} hinterlegt.
- else
  %dl.dl-horizontal.extra-wide
    - if accessible?(:floor)
      %dt= t "mongoid.attributes.figure.floor"
      %dd
        = @figure.floor
        &nbsp;

    - if accessible?(:floor_estimate)
      %dt= t "mongoid.attributes.figure.floor_estimate"
      %dd
        = @figure.floor_estimate
        &nbsp;


    - if @real_estate.living?
      %dt= t "mongoid.attributes.figure.rooms"
      %dd
        = @figure.rooms
        &nbsp;

      %dt= t "mongoid.attributes.figure.rooms_estimate"
      %dd
        = @figure.rooms_estimate
        &nbsp;

      %dt= t "mongoid.attributes.figure.living_surface"
      %dd
        = @figure.living_surface
        &nbsp;

      %dt= t "mongoid.attributes.figure.living_surface_estimate"
      %dd
        = @figure.living_surface_estimate
        &nbsp;

      %dt= t "mongoid.attributes.figure.specification_living_surface"
      %dd
        = @figure.specification_living_surface
        &nbsp;

    - if @real_estate.working? || @real_estate.storing?
      %dt= t "mongoid.attributes.figure.usable_surface"
      %dd
        = @figure.usable_surface
        &nbsp;

      %dt= t "mongoid.attributes.figure.usable_surface_estimate"
      %dd
        = @figure.usable_surface_estimate
        &nbsp;

    - if @real_estate.living? || @real_estate.working?
      %dt= t "mongoid.attributes.figure.property_surface"
      %dd
        = @figure.property_surface
        &nbsp;

      %dt= t "mongoid.attributes.figure.property_surface_estimate"
      %dd
        = @figure.property_surface_estimate
        &nbsp;

      %dt= t "mongoid.attributes.figure.storage_surface"
      %dd
        = @figure.storage_surface
        &nbsp;

      %dt= t "mongoid.attributes.figure.storage_surface_estimate"
      %dd
        = @figure.storage_surface_estimate
        &nbsp;

      %dt= t "mongoid.attributes.figure.specification_usable_surface"
      %dd
        = @figure.specification_usable_surface
        &nbsp;

  %legend= t('.offer')
  %dl.dl-horizontal.extra-wide
    %dt= t "mongoid.attributes.figure.has_parking_spot"
    %dd= t "#{@figure.has_parking_spot?}"

    %dt= t "mongoid.attributes.figure.has_roofed_parking_spot"
    %dd= t "#{@figure.has_roofed_parking_spot?}"

    %dt= t "mongoid.attributes.figure.has_garage"
    %dd= t "#{@figure.has_garage?}"

    - if parking_field_visible?(@figure.real_estate, 'inside_parking_spots')
      %dt= t "mongoid.attributes.figure.inside_parking_spots"
      %dd
        = @figure.inside_parking_spots
        &nbsp;

    - if parking_field_visible?(@figure.real_estate, 'outside_parking_spots')
      %dt= t "mongoid.attributes.figure.outside_parking_spots"
      %dd
        = @figure.outside_parking_spots
        &nbsp;

    - if parking_field_visible?(@figure.real_estate, 'covered_slot')
      %dt= t "mongoid.attributes.figure.covered_slot"
      %dd
        = @figure.covered_slot
        &nbsp;

    - if parking_field_visible?(@figure.real_estate, 'covered_bike')
      %dt= t "mongoid.attributes.figure.covered_bike"
      %dd
        = @figure.covered_bike
        &nbsp;

    - if parking_field_visible?(@figure.real_estate, 'outdoor_bike')
      %dt= t "mongoid.attributes.figure.outdoor_bike"
      %dd
        = @figure.outdoor_bike
        &nbsp;

    - if parking_field_visible?(@figure.real_estate, 'single_garage')
      %dt= t "mongoid.attributes.figure.single_garage"
      %dd
        = @figure.single_garage
        &nbsp;

    - if parking_field_visible?(@figure.real_estate, 'double_garage')
      %dt= t "mongoid.attributes.figure.double_garage"
      %dd
        = @figure.double_garage
        &nbsp;

    - if accessible?(:offer_html)
      %dt= t "mongoid.attributes.figure.offer_html"
      %dd= @figure.offer_html.try(:html_safe)
      &nbsp;
