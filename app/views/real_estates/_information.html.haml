.accordion-item
  .title= t('information.title')
  .content
    - if information.available_from.present?
      %dl
        %dt= t('information.available_from')
        %dd= information.available_from

    - if information.characteristics.any?
      %dl
        %dt= t('information.characteristics')
        %dd= information.characteristics.join(', ')

    - if real_estate.commercial_utilization?
      - if information.maximal_floor_loading.present?
        %dl
          %dt= t('information.maximal_floor_loading')
          %dd= information.maximal_floor_loading

      - if information.freight_elevator_carrying_capacity.present?
        %dl
          %dt= t('information.freight_elevator_carrying_capacity')
          %dd= information.freight_elevator_carrying_capacity

    - if information.minimum_rental_period.present?
      %dl
        %dt= t('information.minimum_rental_period')
        %dd= information.minimum_rental_period

    - if information.notice_dates.present?
      %dl
        %dt= t('information.notice_dates')
        %dd= information.notice_dates

    - if information.notice_period.present?
      %dl
        %dt= t('information.notice_period')
        %dd= information.notice_period
