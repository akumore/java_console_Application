.chapter.contact
  %h2= t '.title'

  %dl
    %dt= t "mongoid.attributes.employee.departments.#{contact.department}"
    %dd
      = contact.firstname
      = contact.lastname
      %br
      = contact.job_function

  %dl
    %dt
    %dd
      = t '.street'
      %br
      = t '.zip'
      = t '.city'

  %dl
    %dt
    %dd
      = t '.phone'
      = contact.phone

      - if contact.mobile.present?
        %br
        = t '.mobile'
        = contact.mobile

      -if contact.fax.present?
        %br
        = t '.fax'
        = contact.fax

      %br
      = contact.email
      %br
      = t '.www'
