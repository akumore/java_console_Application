.chapter
  %h2= t('.title')

  - if display_estimated_available_from = information.display_estimated_available_from.presence
    %dl
      %dt= t('.display_estimated_available_from')
      %dd= display_estimated_available_from

  - if characteristics.any?
    %dl
      %dt= t('.characteristics')
      %dd= characteristics.join(', ')

  - if real_estate.commercial_utilization?
    %dl
      %dt= t('.maximal_floor_loading')
      %dd= "#{information.maximal_floor_loading} kg"

    %dl
      %dt= t('.freight_elevator_carrying_capacity')
      %dd= "#{information.freight_elevator_carrying_capacity} kg"

  - if minimum_rental_period = information.minimum_rental_period.presence
    %dl
      %dt= t('.minimum_rental_period')
      %dd= minimum_rental_period

  - if notice_dates = information.notice_dates.presence
    %dl
      %dt= t('.notice_dates')
      %dd= notice_dates

  - if notice_period = information.notice_period.presence
    %dl
      %dt= t('.notice_period')
      %dd= notice_period
