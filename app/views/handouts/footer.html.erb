<html>
  <head>
    <script type="text/javascript">
      function subst() {
        var vars={};
        var x=document.location.search.substring(1).split('&');
        for(var i in x) {var z=x[i].split('=',2);vars[z[0]] = unescape(z[1]);}
        var x=['frompage','topage','page','webpage','section','subsection','subsubsection'];
        for(var i in x) {
          var y = document.getElementsByClassName(x[i]);
          for(var j=0; j<y.length; ++j) y[j].textContent = vars[x[i]];
        }
      }
    </script>

    <script type="text/javascript">
      function selectFooter() {
          var currentPage=document.getElementsByClassName('page')[0].textContent;
          if (currentPage=="1")
            document.getElementById("title-page-footer").style.display = "block";
          else
            document.getElementById("page-footer").style.display = "block";
      }
    </script>

    <style type="text/css">
      #page-footer{
        font-family: 'Rockwell Std';
        font-size: 7pt;
        color: #0A1930;
        text-align: right;
        padding-top: 20px;
      }

      #title-page-footer{
        padding-right: 15px;
      }

    </style>
  </head>

  <body style="margin: 0;" onload="subst();selectFooter();">
    <div id="title-page-footer" style="display: none; text-align: right">
      <%= image_tag '/images/handout-footer-logo.png', :width => "180" %>
    </div>
    <div id="page-footer" style="display:none;">
        Alfred MÃ¼ller AG | Objektdokumentation | <span class="page"></span>
    </div>
  </body>
</html>
