#title-page-header
  .primary-image
    = image_tag @real_estate.images.primary.file.minidoku.url
  .frame-overlay
    = image_tag('vision/frame.png')
  .primary-title
    \...
    = @real_estate.title
    %span
      = t(".#{RealEstate::OFFER_FOR_RENT}_#{@real_estate.utilization}")

= render 'overview', :real_estate => @real_estate

- if @real_estate.floor_plans.any?
  = render 'floorplan'

- if @real_estate.information.present?
  = render 'information', :real_estate => @real_estate, :information => @real_estate.information

= render 'pricing', :real_estate => @real_estate, :pricing => @real_estate.pricing

- if @real_estate.additional_description.present?
  = render 'description', :real_estate => @real_estate, :additional_description => @real_estate.additional_description

- if (handout_images = @real_estate.images.for_print).any?
  = render 'images', :images => handout_images

- if @real_estate.contact.present?
  = render 'contact', :contact => @real_estate.contact, :direct_link => @real_estate.address.link_url
