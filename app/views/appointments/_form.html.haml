-if @appointment.errors.any?
  .alert
    %h3= t('.errors')
    %p
      %ul
        - @appointment.errors.full_messages.each do |msg|
          %li= msg

= form_for [@real_estate, @appointment], :remote=>true do |f|
  .control-group
    .controls
      = f.text_field :firstname, :placeholder=>t("mongoid.attributes.appointment.firstname")
  .control-group
    .controls
      = f.text_field :lastname, :placeholder=>t("mongoid.attributes.appointment.lastname")
  .control-group
    .controls
      = f.text_field :email, :placeholder=>t("mongoid.attributes.appointment.email")
  .control-group
    .controls
      = f.text_field :phone, :placeholder=>t("mongoid.attributes.appointment.phone")
  .form-actions
    .controls
      = f.submit t(".submit")
