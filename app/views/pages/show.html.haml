- @page.bricks.each do |brick|
  - if brick.type == 'accordion'
    - content_for brick.group_id do
      = render "bricks/#{brick.type}", :brick => brick
    - if brick.next.blank? || brick.next.type != 'accordion'
      .accordion-item
        = yield brick.group_id
  - else
    = render "bricks/#{brick.type}", :brick => brick
