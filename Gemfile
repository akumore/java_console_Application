source "http://rubygems.org"

gem 'rails', '~> 3.1.0'
gem 'json'
gem 'haml-rails'
gem 'html5-rails', :git => 'git://github.com/sporkd/html5-rails.git'
gem 'jquery-rails'
gem 'mongoid', '~> 2.4'
gem 'bson_ext', '~> 1.5'
gem 'settingslogic'
gem 'rails-backbone'
gem 'simple-navigation'
gem 'twitter-bootstrap-rails', :git => "git://github.com/seyhunak/twitter-bootstrap-rails.git" #, :branch => "static" # we don't want the LESS version
gem 'blazing'
gem 'blazing-rails'
gem 'devise', '1.5.3'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', '~> 3.1.0'
  gem 'coffee-rails', '~> 3.1.0'
  gem 'uglifier'
  gem 'compass', '~> 0.12.alpha.2'
  gem 'compass-h5bp'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'capybara'
  gem 'capybara-webkit'
  gem 'fabrication'
end

group :test do
  gem "launchy", "~> 2.0.5"
end