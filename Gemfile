source 'http://rubygems.org'

gem 'rails', '~> 3.1.0'
gem 'json'
gem 'haml-rails'
gem 'jquery-rails'
gem 'simple_form', :git => 'git://github.com/plataformatec/simple_form.git' # for tw-bootstrap integration
gem 'mongoid', '~> 2.4'
gem 'bson_ext', '~> 1.5'
gem 'settingslogic'
gem 'rails-backbone'
gem 'simple-navigation'
gem 'twitter-bootstrap-rails', :git => "git://github.com/seyhunak/twitter-bootstrap-rails.git", :branch => "static" # we don't want the LESS version

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', '~> 3.1.0'
  gem 'coffee-rails', '~> 3.1.0'
  gem 'uglifier'
  gem 'compass', '~> 0.12.alpha.0'
  gem 'html5-boilerplate', :group => :production, :git => 'git://github.com/sporkd/compass-html5-boilerplate.git'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'capybara'
  gem 'capybara-webkit'
end